<h2>Adicionar Vendedor</h2>

<form action="/vendedorCreate" method="post">
    <!-- Campo para inserir o login do vendedor -->
    Login: <input type="text" name="login">
    <br> <br>

    <!-- Campo para inserir a senha do vendedor (oculta os caracteres digitados) -->
    Senha: <input type="password" name="senha">
    <br> <br>

    <!-- Campo para inserir o cpf do vendedor -->
    CPF: <input type="text" name="cpf" id="cpf">
    <br> <br>

    <!-- Campo para inserir o endereço do vendedor -->
    Endereço: <input type="text" name="endereco">
    <br> <br>

    <!-- Campo para inserir a especialidade do vendedor -->
    Especialidade: <input type="text" name="especialidade">
    <br> <br>

    <!-- Botão para enviar os dados do formulário para criar um novo vendedor -->
    <input type="submit" value="Cadastrar">
</form>

{{!-- máscara para o cpf funcionar corretamente --}}
<script>
    document.getElementById('cpf').addEventListener('input', function (e) {
        let value = e.target.value.replace(/\D/g, ''); // remove tudo que não for número
        value = value.slice(0, 11); // limita a 11 dígitos

        // aplica a máscara: 000.000.000-00
        if (value.length >= 3) value = value.replace(/^(\d{3})(\d)/, '$1.$2');
        if (value.length >= 6) value = value.replace(/^(\d{3})\.(\d{3})(\d)/, '$1.$2.$3');
        if (value.length >= 9) value = value.replace(/^(\d{3})\.(\d{3})\.(\d{3})(\d)/, '$1.$2.$3-$4');

        e.target.value = value;
    });
</script>
