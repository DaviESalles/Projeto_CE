<h2>Adicionar Categoria</h2>

<!-- Formulário para criar uma nova categoria -->
<form action="/categoriaCreate" method="post">
    <div class="form-group">
    <!-- Campo de texto para inserir o nome da categoria -->
    {{!-- Nome: <input type="text" name="nome">
    <br> <br> --}}
    <div class="form-group">
        <label for="inputNome">Nome</label>
        <input type="text" class="form-control" id="inputNome" name="nome">
    </div>
    <div class="form-group">
        <label for="inputdescricao">Descrição: </label>
        <input type="text" class="form-control" id="inputdescricao" name="descricao">
    </div>
    {{!-- Descrição: <input type="text" name="descricao">
    <br> <br> --}}
    <!-- Botão para enviar o formulário e cadastrar a categoria -->
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>



